{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
  },
  "include": ["**/*"],
  "exclude": ["example"]
}