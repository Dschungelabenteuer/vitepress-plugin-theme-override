{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "paths": {
      "~theme/*": ["./node_modules/vitepress/dist/client/theme-default/*"]
    }
  },
  "include": ["**/*", ".vitepress/**/*"]
}